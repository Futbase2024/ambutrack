/// Tabla de especialidades m√©dicas
class EspecialidadTable extends StatefulWidget {
  const EspecialidadTable({super.key});

  @override
  State<EspecialidadTable> createState() => _EspecialidadTableState();
}

class _EspecialidadTableState extends State<EspecialidadTable> {
  String _searchQuery = '';
  int? _sortColumnIndex;
  bool _sortAscending = true;
  bool _isDeleting = false;
  BuildContext? _loadingDialogContext;
  DateTime? _deleteStartTime;

  @override
  Widget build(BuildContext context) {
    return BlocListener<EspecialidadBloc, EspecialidadState>(
      listener: (BuildContext context, EspecialidadState state) {
        if (_isDeleting && _loadingDialogContext != null) {
          if (state is EspecialidadLoaded || state is EspecialidadError) {
            final Duration elapsed = DateTime.now().difference(_deleteStartTime!);
            Navigator.of(_loadingDialogContext!).pop();

            setState(() {
              _isDeleting = false;
              _loadingDialogContext = null;
              _deleteStartTime = null;
            });

            if (state is EspecialidadError) {
              ScaffoldMessenger.of(context).showSnackBar(
                SnackBar(
                  content: Text('Error al eliminar: ${state.message}'),
                  backgroundColor: AppColors.error,
                ),
              );
            } else if (state is EspecialidadLoaded) {
              ScaffoldMessenger.of(context).showSnackBar(
                SnackBar(
                  content: Text('‚úÖ Especialidad eliminada exitosamente (${elapsed.inMilliseconds}ms)'),
                  backgroundColor: AppColors.success,
                  duration: const Duration(seconds: 3),
                ),
              );
            }
          }
        }
      },
      child: BlocBuilder<EspecialidadBloc, EspecialidadState>(
        builder: (BuildContext context, EspecialidadState state) {
          if (state is EspecialidadLoading) {
            return const _LoadingView();
          }

          if (state is EspecialidadError) {
            return _ErrorView(message: state.message);
          }

          if (state is EspecialidadLoaded) {
            List<EspecialidadEntity> filtradas = _filterEspecialidades(state.especialidades);
            filtradas = _sortEspecialidades(filtradas);

            return SingleChildScrollView(
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.stretch,
                children: <Widget>[
                  // Header: T√≠tulo + B√∫squeda
                  Row(
                    children: <Widget>[
                      Expanded(
                        child: Text(
                          'Listado de Especialidades M√©dicas',
                          style: GoogleFonts.inter(
                            fontSize: 18,
                            fontWeight: FontWeight.w600,
                            color: AppColors.textPrimaryLight,
                          ),
                        ),
                      ),
                      SizedBox(
                        width: 300,
                        child: _SearchField(
                          searchQuery: _searchQuery,
                          onSearchChanged: (String query) {
                            setState(() => _searchQuery = query);
                          },
                        ),
                      ),
                    ],
                  ),
                  const SizedBox(height: AppSizes.spacing),

                  // Info de resultados
                  if (state.especialidades.length != filtradas.length)
                    Padding(
                      padding: const EdgeInsets.only(bottom: AppSizes.spacing),
                      child: Text(
                        'Mostrando ${filtradas.length} de ${state.especialidades.length} especialidades',
                        style: GoogleFonts.inter(
                          fontSize: 13,
                          color: AppColors.textSecondaryLight,
                        ),
                      ),
                    ),

                  // Tabla
                  ModernDataTableV2<EspecialidadEntity>(
                    onRowTap: (EspecialidadEntity especialidad) => _viewEspecialidad(context, especialidad),
                    onEdit: (EspecialidadEntity especialidad) => _editEspecialidad(context, especialidad),
                    onDelete: (EspecialidadEntity especialidad) => _confirmDelete(context, especialidad),
                    sortColumnIndex: _sortColumnIndex,
                    sortAscending: _sortAscending,
                    onSort: (int columnIndex, bool ascending) {
                      setState(() {
                        _sortColumnIndex = columnIndex;
                        _sortAscending = ascending;
                      });
                    },
                    columns: const <ModernDataColumnV2>[
                      ModernDataColumnV2(label: 'NOMBRE', flex: 3, sortable: true),
                      ModernDataColumnV2(label: 'TIPO', flex: 2, sortable: true),
                      ModernDataColumnV2(label: 'CERTIFICACI√ìN', flex: 2, sortable: true),
                      ModernDataColumnV2(label: 'ESTADO', flex: 0, sortable: true),
                    ],
                    rows: filtradas.map((EspecialidadEntity especialidad) {
                      return ModernDataRowV2<EspecialidadEntity>(
                        data: especialidad,
                        cells: <Widget>[
                          _buildNombreCell(especialidad),
                          _buildTipoCell(especialidad),
                          _buildCertificacionCell(especialidad),
                          _buildEstadoCell(especialidad),
                        ],
                      );
                    }).toList(),
                    emptyMessage: _searchQuery.isNotEmpty
                        ? 'No se encontraron especialidades con los filtros aplicados'
                        : 'No hay especialidades registradas',
                    emptyIcon: Icons.medical_services_outlined,
                  ),
                ],
              ),
            );
          }

          return const SizedBox.shrink();
        },
      ),
    );
  }

  List<EspecialidadEntity> _filterEspecialidades(List<EspecialidadEntity> especialidades) {
    if (_searchQuery.isEmpty) {
      return especialidades;
    }

    final String query = _searchQuery.toLowerCase();
    return especialidades.where((EspecialidadEntity especialidad) {
      return especialidad.nombre.toLowerCase().contains(query) ||
          (especialidad.descripcion?.toLowerCase().contains(query) ?? false) ||
          especialidad.tipoEspecialidad.toLowerCase().contains(query);
    }).toList();
  }

  List<EspecialidadEntity> _sortEspecialidades(List<EspecialidadEntity> especialidades) {
    if (_sortColumnIndex == null) {
      return especialidades;
    }

    final List<EspecialidadEntity> sorted = List<EspecialidadEntity>.from(especialidades)
      ..sort((EspecialidadEntity a, EspecialidadEntity b) {
      int comparison = 0;

      switch (_sortColumnIndex) {
        case 0: // Nombre
          comparison = a.nombre.compareTo(b.nombre);
          break;
        case 1: // Tipo
          comparison = a.tipoEspecialidad.compareTo(b.tipoEspecialidad);
          break;
        case 2: // Certificaci√≥n
          comparison = a.requiereCertificacion == b.requiereCertificacion ? 0 : (a.requiereCertificacion ? -1 : 1);
          break;
        case 3: // Estado
          comparison = a.activo == b.activo ? 0 : (a.activo ? -1 : 1);
          break;
      }

      return _sortAscending ? comparison : -comparison;
    });

    return sorted;
  }

  Widget _buildNombreCell(EspecialidadEntity especialidad) {
    return Text(
      especialidad.nombre,
      style: GoogleFonts.inter(
        fontSize: 14,
        fontWeight: FontWeight.w500,
        color: AppColors.textPrimaryLight,
      ),
    );
  }

  Widget _buildTipoCell(EspecialidadEntity especialidad) {
    String label;
    Color color;

    switch (especialidad.tipoEspecialidad) {
      case 'medica':
        label = 'M√©dica';
        color = AppColors.primary;
        break;
      case 'quirurgica':
        label = 'Quir√∫rgica';
        color = AppColors.error;
        break;
      case 'diagnostica':
        label = 'Diagn√≥stica';
        color = AppColors.warning;
        break;
      case 'apoyo':
        label = 'Apoyo';
        color = AppColors.info;
        break;
      case 'enfermeria':
        label = 'Enfermer√≠a';
        color = AppColors.secondary;
        break;
      case 'tecnica':
        label = 'T√©cnica';
        color = AppColors.textSecondaryLight;
        break;
      default:
        label = especialidad.tipoEspecialidad;
        color = AppColors.textSecondaryLight;
    }

    return Container(
      padding: const EdgeInsets.symmetric(horizontal: 10, vertical: 4),
      decoration: BoxDecoration(
        color: color.withValues(alpha: 0.1),
        borderRadius: BorderRadius.circular(6),
        border: Border.all(color: color.withValues(alpha: 0.3)),
      ),
      child: Text(
        label,
        style: GoogleFonts.inter(
          fontSize: 11,
          fontWeight: FontWeight.w600,
          color: color,
        ),
      ),
    );
  }

  Widget _buildCertificacionCell(EspecialidadEntity especialidad) {
    return Row(
      mainAxisSize: MainAxisSize.min,
      children: <Widget>[
        Icon(
          especialidad.requiereCertificacion ? Icons.check_circle : Icons.cancel,
          size: 18,
          color: especialidad.requiereCertificacion ? AppColors.success : AppColors.textSecondaryLight,
        ),
        const SizedBox(width: 6),
        Text(
          especialidad.requiereCertificacion ? 'S√≠' : 'No',
          style: GoogleFonts.inter(
            fontSize: 14,
            fontWeight: FontWeight.w500,
            color: especialidad.requiereCertificacion ? AppColors.success : AppColors.textSecondaryLight,
          ),
        ),
      ],
    );
  }

  Widget _buildEstadoCell(EspecialidadEntity especialidad) {
    return Center(
      child: Tooltip(
        message: especialidad.activo ? 'Activo' : 'Inactivo',
        child: Icon(
          especialidad.activo ? Icons.check_circle : Icons.cancel,
          size: 24,
          color: especialidad.activo ? AppColors.success : AppColors.textSecondaryLight,
        ),
      ),
    );
  }

  void _viewEspecialidad(BuildContext context, EspecialidadEntity especialidad) {
    showDialog<void>(
      context: context,
      builder: (BuildContext dialogContext) => BlocProvider<EspecialidadBloc>.value(
        value: context.read<EspecialidadBloc>(),
        child: _EspecialidadViewDialog(especialidad: especialidad),
      ),
    );
  }

  void _editEspecialidad(BuildContext context, EspecialidadEntity especialidad) {
    showDialog<void>(
      context: context,
      builder: (_) => EspecialidadFormDialog(especialidad: especialidad),
    );
  }

  Future<void> _confirmDelete(BuildContext context, EspecialidadEntity especialidad) async {
    String tipoLabel;
    switch (especialidad.tipoEspecialidad) {
      case 'medica':
        tipoLabel = 'M√©dica';
        break;
      case 'quirurgica':
        tipoLabel = 'Quir√∫rgica';
        break;
      case 'diagnostica':
        tipoLabel = 'Diagn√≥stica';
        break;
      case 'apoyo':
        tipoLabel = 'Apoyo';
        break;
      case 'enfermeria':
        tipoLabel = 'Enfermer√≠a';
        break;
      case 'tecnica':
        tipoLabel = 'T√©cnica';
        break;
      default:
        tipoLabel = especialidad.tipoEspecialidad;
    }

    final bool? confirmed = await showConfirmationDialog(
      context: context,
      title: 'Confirmar Eliminaci√≥n',
      message: '¬øEst√°s seguro de que deseas eliminar esta especialidad? Esta acci√≥n no se puede deshacer.',
      itemDetails: <String, String>{
        'Nombre': especialidad.nombre,
        'Tipo': tipoLabel,
        'Certificaci√≥n': especialidad.requiereCertificacion ? 'Requerida' : 'No requerida',
        if (especialidad.descripcion != null && especialidad.descripcion!.isNotEmpty)
          'Descripci√≥n': especialidad.descripcion!,
        'Estado': especialidad.activo ? 'Activa' : 'Inactiva',
      },
    );

    if (confirmed == true && context.mounted) {
      debugPrint('üóëÔ∏è Eliminando especialidad: ${especialidad.nombre} (${especialidad.id})');

      BuildContext? loadingContext;

      unawaited(
        showDialog<void>(
          context: context,
          barrierDismissible: false,
          builder: (BuildContext dialogContext) {
            loadingContext = dialogContext;

            WidgetsBinding.instance.addPostFrameCallback((_) {
              if (mounted && loadingContext != null) {
                setState(() {
                  _isDeleting = true;
                  _loadingDialogContext = loadingContext;
                  _deleteStartTime = DateTime.now();
                });
              }
            });

            return const AppLoadingOverlay(
              message: 'Eliminando especialidad...',
              color: AppColors.emergency,
              icon: Icons.delete_forever,
            );
          },
        ),
      );

      if (context.mounted) {
        context.read<EspecialidadBloc>().add(EspecialidadDeleteRequested(especialidad.id));
      }
    }
  }
}

/// Widget de b√∫squeda
class _SearchField extends StatefulWidget {
  const _SearchField({
    required this.searchQuery,
    required this.onSearchChanged,
  });

  final String searchQuery;
  final void Function(String) onSearchChanged;

  @override
  State<_SearchField> createState() => _SearchFieldState();
}

class _SearchFieldState extends State<_SearchField> {
  late TextEditingController _controller;

  @override
  void initState() {
    super.initState();
    _controller = TextEditingController(text: widget.searchQuery);
  }

  @override
  void dispose() {
    _controller.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    return TextField(
      controller: _controller,
      onChanged: widget.onSearchChanged,
      decoration: InputDecoration(
        hintText: 'Buscar especialidad...',
        prefixIcon: const Icon(Icons.search, size: 20, color: AppColors.textSecondaryLight),
        suffixIcon: _controller.text.isNotEmpty
            ? IconButton(
                icon: const Icon(Icons.clear, size: 18, color: AppColors.textSecondaryLight),
                onPressed: () {
                  _controller.clear();
                  widget.onSearchChanged('');
                },
              )
            : null,
        border: OutlineInputBorder(
          borderRadius: BorderRadius.circular(AppSizes.radiusSmall),
          borderSide: const BorderSide(color: AppColors.gray300),
        ),
        enabledBorder: OutlineInputBorder(
          borderRadius: BorderRadius.circular(AppSizes.radiusSmall),
          borderSide: const BorderSide(color: AppColors.gray300),
        ),
        focusedBorder: OutlineInputBorder(
          borderRadius: BorderRadius.circular(AppSizes.radiusSmall),
          borderSide: const BorderSide(color: AppColors.primary, width: 2),
        ),
        contentPadding: const EdgeInsets.symmetric(
          horizontal: AppSizes.paddingMedium,
          vertical: AppSizes.paddingSmall,
        ),
        isDense: true,
      ),
      style: GoogleFonts.inter(
        fontSize: 14,
        color: AppColors.textPrimaryLight,
      ),
    );
  }
}

