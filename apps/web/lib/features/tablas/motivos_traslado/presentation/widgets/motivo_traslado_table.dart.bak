/// Tabla de motivos de traslado moderna
class MotivoTrasladoTable extends StatefulWidget {
  /// Constructor
  const MotivoTrasladoTable({super.key});

  @override
  State<MotivoTrasladoTable> createState() => _MotivoTrasladoTableState();
}

class _MotivoTrasladoTableState extends State<MotivoTrasladoTable> {
  String _searchQuery = '';
  int? _sortColumnIndex;
  bool _sortAscending = true;
  bool _isDeleting = false;
  BuildContext? _loadingDialogContext;
  DateTime? _deleteStartTime;

  @override
  Widget build(BuildContext context) {
    return BlocListener<MotivoTrasladoBloc, MotivoTrasladoState>(
      listener: (BuildContext context, MotivoTrasladoState state) {
        debugPrint('üîî BlocListener: Estado recibido: ${state.runtimeType}');
        debugPrint('üîî BlocListener: _isDeleting=$_isDeleting, _loadingDialogContext=${_loadingDialogContext != null ? "‚úÖ" : "‚ùå"}');

        // Solo procesar si estamos eliminando
        if (_isDeleting && _loadingDialogContext != null) {
          debugPrint('‚úÖ BlocListener: Condiciones cumplidas para cerrar di√°logo');

          if (state is MotivoTrasladoLoaded || state is MotivoTrasladoError) {
            debugPrint('‚úÖ BlocListener: Estado es MotivoTrasladoLoaded o MotivoTrasladoError, cerrando di√°logo...');

            // Calcular tiempo transcurrido
            final Duration elapsed = DateTime.now().difference(_deleteStartTime!);
            debugPrint('‚è±Ô∏è Tiempo de eliminaci√≥n: ${elapsed.inMilliseconds}ms');

            // Cerrar el di√°logo de loading usando el contexto guardado
            Navigator.of(_loadingDialogContext!).pop();
            debugPrint('‚úÖ BlocListener: Di√°logo cerrado');

            // Resetear variables
            setState(() {
              _isDeleting = false;
              _loadingDialogContext = null;
              _deleteStartTime = null;
            });

            // Si es error, mostrar snackbar
            if (state is MotivoTrasladoError) {
              ScaffoldMessenger.of(context).showSnackBar(
                SnackBar(
                  content: Text('Error al eliminar: ${state.message}'),
                  backgroundColor: AppColors.error,
                ),
              );
            } else if (state is MotivoTrasladoLoaded) {
              // Mostrar mensaje de √©xito con tiempo
              ScaffoldMessenger.of(context).showSnackBar(
                SnackBar(
                  content: Text('‚úÖ Motivo de traslado eliminado exitosamente (${elapsed.inMilliseconds}ms)'),
                  backgroundColor: AppColors.success,
                  duration: const Duration(seconds: 3),
                ),
              );
            }
          }
        } else {
          debugPrint('‚ùå BlocListener: No se cumplen las condiciones para cerrar el di√°logo');
        }
      },
      child: BlocBuilder<MotivoTrasladoBloc, MotivoTrasladoState>(
        builder: (BuildContext context, MotivoTrasladoState state) {
        if (state is MotivoTrasladoLoading) {
          return const _LoadingView();
        }

        if (state is MotivoTrasladoError) {
          return _ErrorView(message: state.message);
        }

        if (state is MotivoTrasladoLoaded) {
          List<MotivoTrasladoEntity> motivosFiltrados = _filterMotivos(state.motivos);
          motivosFiltrados = _sortMotivos(motivosFiltrados);

          return Column(
            crossAxisAlignment: CrossAxisAlignment.stretch,
            children: <Widget>[
              // Header: T√≠tulo + B√∫squeda
              Row(
                children: <Widget>[
                  Expanded(
                    child: Text(
                      'Listado de Motivos de Traslado',
                      style: GoogleFonts.inter(
                        fontSize: 18,
                        fontWeight: FontWeight.w600,
                        color: AppColors.textPrimaryLight,
                      ),
                    ),
                  ),
                  SizedBox(
                    width: 300,
                    child: _SearchField(
                      searchQuery: _searchQuery,
                      onSearchChanged: (String query) {
                        setState(() => _searchQuery = query);
                      },
                    ),
                  ),
                ],
              ),
              const SizedBox(height: AppSizes.spacing),

              // Info de resultados
              if (state.motivos.length != motivosFiltrados.length)
                Padding(
                  padding: const EdgeInsets.only(bottom: AppSizes.spacing),
                  child: Text(
                    'Mostrando ${motivosFiltrados.length} de ${state.motivos.length} motivos',
                    style: GoogleFonts.inter(
                      fontSize: 13,
                      color: AppColors.textSecondaryLight,
                    ),
                  ),
                ),

              // Tabla
              ModernDataTableV2<MotivoTrasladoEntity>(
                onRowTap: (MotivoTrasladoEntity motivo) => _viewMotivo(context, motivo),
                onEdit: (MotivoTrasladoEntity motivo) => _editMotivo(context, motivo),
                onDelete: (MotivoTrasladoEntity motivo) => _confirmDelete(context, motivo),
                sortColumnIndex: _sortColumnIndex,
                sortAscending: _sortAscending,
                onSort: (int columnIndex, bool ascending) {
                  setState(() {
                    _sortColumnIndex = columnIndex;
                    _sortAscending = ascending;
                  });
                },
                columns: const <ModernDataColumnV2>[
                  ModernDataColumnV2(label: 'NOMBRE', flex: 3, sortable: true),
                  ModernDataColumnV2(label: 'DESCRIPCI√ìN', flex: 5, sortable: true),
                  ModernDataColumnV2(label: 'ESTADO', flex: 0, sortable: true),
                ],
                rows: motivosFiltrados.map((MotivoTrasladoEntity motivo) {
                  return ModernDataRowV2<MotivoTrasladoEntity>(
                    data: motivo,
                    cells: <Widget>[
                      _buildNombreCell(motivo),
                      _buildDescripcionCell(motivo),
                      _buildEstadoCell(motivo),
                    ],
                  );
                }).toList(),
                emptyMessage: _searchQuery.isNotEmpty
                    ? 'No se encontraron motivos con los filtros aplicados'
                    : 'No hay motivos de traslado registrados',
                emptyIcon: Icons.local_shipping_outlined,
              ),
            ],
          );
        }

        return const SizedBox.shrink();
        },
      ),
    );
  }

  List<MotivoTrasladoEntity> _filterMotivos(List<MotivoTrasladoEntity> motivos) {
    if (_searchQuery.isEmpty) {
      return motivos;
    }

    final String query = _searchQuery.toLowerCase();
    return motivos.where((MotivoTrasladoEntity motivo) {
      return motivo.nombre.toLowerCase().contains(query) ||
          motivo.descripcion.toLowerCase().contains(query);
    }).toList();
  }

  List<MotivoTrasladoEntity> _sortMotivos(List<MotivoTrasladoEntity> motivos) {
    if (_sortColumnIndex == null) {
      return motivos;
    }

    final List<MotivoTrasladoEntity> sorted = List<MotivoTrasladoEntity>.from(motivos)
      ..sort((MotivoTrasladoEntity a, MotivoTrasladoEntity b) {
      int comparison = 0;

      switch (_sortColumnIndex) {
        case 0: // Nombre
          comparison = a.nombre.compareTo(b.nombre);
        case 1: // Descripci√≥n
          comparison = a.descripcion.compareTo(b.descripcion);
        case 2: // Estado
          comparison = a.activo == b.activo ? 0 : (a.activo ? -1 : 1);
      }

        return _sortAscending ? comparison : -comparison;
      });

    return sorted;
  }

  Widget _buildNombreCell(MotivoTrasladoEntity motivo) {
    return Text(
      motivo.nombre,
      style: GoogleFonts.inter(
        fontSize: 13,
        fontWeight: FontWeight.w600,
        color: AppColors.textPrimaryLight,
      ),
    );
  }

  Widget _buildDescripcionCell(MotivoTrasladoEntity motivo) {
    return Text(
      motivo.descripcion,
      style: GoogleFonts.inter(
        fontSize: 13,
        color: AppColors.textSecondaryLight,
      ),
      maxLines: 2,
      overflow: TextOverflow.ellipsis,
    );
  }

  Widget _buildEstadoCell(MotivoTrasladoEntity motivo) {
    return Center(
      child: Tooltip(
        message: motivo.activo ? 'Activo' : 'Inactivo',
        child: Icon(
          motivo.activo ? Icons.check_circle : Icons.cancel,
          size: 24,
          color: motivo.activo ? AppColors.success : AppColors.textSecondaryLight,
        ),
      ),
    );
  }

  void _viewMotivo(BuildContext context, MotivoTrasladoEntity motivo) {
    showDialog<void>(
      context: context,
      builder: (BuildContext dialogContext) => BlocProvider<MotivoTrasladoBloc>.value(
        value: context.read<MotivoTrasladoBloc>(),
        child: _MotivoTrasladoViewDialog(motivo: motivo),
      ),
    );
  }

  void _editMotivo(BuildContext context, MotivoTrasladoEntity motivo) {
    showDialog<void>(
      context: context,
      builder: (BuildContext dialogContext) => BlocProvider<MotivoTrasladoBloc>.value(
        value: context.read<MotivoTrasladoBloc>(),
        child: MotivoTrasladoFormDialog(motivo: motivo),
      ),
    );
  }

  Future<void> _confirmDelete(BuildContext context, MotivoTrasladoEntity motivo) async {
    final bool? confirmed = await showConfirmationDialog(
      context: context,
      title: 'Confirmar Eliminaci√≥n',
      message: '¬øEst√°s seguro de que deseas eliminar este motivo de traslado? Esta acci√≥n no se puede deshacer.',
      itemDetails: <String, String>{
        'Nombre': motivo.nombre,
        'Descripci√≥n': motivo.descripcion,
        'Estado': motivo.activo ? 'Activo' : 'Inactivo',
      },
    );

    if (confirmed == true && context.mounted) {
      debugPrint('üóëÔ∏è Eliminando motivo: ${motivo.nombre} (${motivo.id})');

      // Variable para guardar el contexto del di√°logo
      BuildContext? loadingContext;

      // Mostrar overlay de loading
      unawaited(
        showDialog<void>(
          context: context,
          barrierDismissible: false,
          builder: (BuildContext dialogContext) {
            debugPrint('üí¨ showDialog builder: Guardando contexto localmente');
            // Guardar contexto localmente primero
            loadingContext = dialogContext;

            // Programar setState para despu√©s del build
            WidgetsBinding.instance.addPostFrameCallback((_) {
              debugPrint('‚è∞ addPostFrameCallback: Ejecut√°ndose... mounted=$mounted, loadingContext=${loadingContext != null ? "‚úÖ" : "‚ùå"}');
              if (mounted && loadingContext != null) {
                debugPrint('‚úÖ addPostFrameCallback: Guardando contexto en estado');
                setState(() {
                  _isDeleting = true;
                  _loadingDialogContext = loadingContext;
                  _deleteStartTime = DateTime.now();
                });
                debugPrint('‚úÖ addPostFrameCallback: Contexto guardado');
              } else {
                debugPrint('‚ùå addPostFrameCallback: NO se puede guardar contexto (mounted=$mounted, loadingContext=${loadingContext != null})');
              }
            });

            return const AppLoadingOverlay(
              message: 'Eliminando motivo de traslado...',
              color: AppColors.emergency,
              icon: Icons.delete_forever,
            );
          },
        ),
      );

      // Disparar evento de eliminaci√≥n
      if (context.mounted) {
        context.read<MotivoTrasladoBloc>().add(MotivoTrasladoDeleteRequested(motivo.id!));
      }

      // El BlocListener cerrar√° el di√°logo cuando se complete
    }
  }
}

