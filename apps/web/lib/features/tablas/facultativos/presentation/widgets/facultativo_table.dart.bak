/// Tabla de facultativos moderna
class FacultativoTable extends StatefulWidget {
  const FacultativoTable({super.key});

  @override
  State<FacultativoTable> createState() => _FacultativoTableState();
}

class _FacultativoTableState extends State<FacultativoTable> {
  String _searchQuery = '';
  int? _sortColumnIndex;
  bool _sortAscending = true;
  bool _isDeleting = false;
  BuildContext? _loadingDialogContext;
  DateTime? _deleteStartTime;

  @override
  Widget build(BuildContext context) {
    return BlocListener<FacultativoBloc, FacultativoState>(
      listener: (BuildContext context, FacultativoState state) {
        debugPrint('üîî BlocListener: Estado recibido: ${state.runtimeType}');
        debugPrint('üîî BlocListener: _isDeleting=$_isDeleting, _loadingDialogContext=${_loadingDialogContext != null ? "‚úÖ" : "‚ùå"}');

        // Solo procesar si estamos eliminando
        if (_isDeleting && _loadingDialogContext != null) {
          debugPrint('‚úÖ BlocListener: Condiciones cumplidas para cerrar di√°logo');

          if (state is FacultativoLoaded || state is FacultativoError) {
            debugPrint('‚úÖ BlocListener: Estado es FacultativoLoaded o FacultativoError, cerrando di√°logo...');

            // Calcular tiempo transcurrido
            final Duration elapsed = DateTime.now().difference(_deleteStartTime!);
            debugPrint('‚è±Ô∏è Tiempo de eliminaci√≥n: ${elapsed.inMilliseconds}ms');

            // Cerrar el di√°logo de loading usando el contexto guardado
            Navigator.of(_loadingDialogContext!).pop();
            debugPrint('‚úÖ BlocListener: Di√°logo cerrado');

            // Resetear variables
            setState(() {
              _isDeleting = false;
              _loadingDialogContext = null;
              _deleteStartTime = null;
            });

            // Si es error, mostrar snackbar
            if (state is FacultativoError) {
              ScaffoldMessenger.of(context).showSnackBar(
                SnackBar(
                  content: Text('Error al eliminar: ${state.message}'),
                  backgroundColor: AppColors.error,
                ),
              );
            } else if (state is FacultativoLoaded) {
              // Mostrar mensaje de √©xito con tiempo
              ScaffoldMessenger.of(context).showSnackBar(
                SnackBar(
                  content: Text('‚úÖ Facultativo eliminado exitosamente (${elapsed.inMilliseconds}ms)'),
                  backgroundColor: AppColors.success,
                  duration: const Duration(seconds: 3),
                ),
              );
            }
          }
        } else {
          debugPrint('‚ùå BlocListener: No se cumplen las condiciones para cerrar el di√°logo');
        }
      },
      child: BlocBuilder<FacultativoBloc, FacultativoState>(
        builder: (BuildContext context, FacultativoState state) {
          if (state is FacultativoLoading) {
            return const _LoadingView();
          }

          if (state is FacultativoError) {
            return _ErrorView(message: state.message);
          }

          if (state is FacultativoLoaded) {
            List<FacultativoEntity> facultativosFiltrados = _filterFacultativos(state.facultativos);
            facultativosFiltrados = _sortFacultativos(facultativosFiltrados);

            return SingleChildScrollView(
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.stretch,
                children: <Widget>[
                  // Header: T√≠tulo + B√∫squeda
                  Row(
                    children: <Widget>[
                      Expanded(
                        child: Text(
                          'Listado de Facultativos',
                          style: GoogleFonts.inter(
                            fontSize: 18,
                            fontWeight: FontWeight.w600,
                            color: AppColors.textPrimaryLight,
                          ),
                        ),
                      ),
                      SizedBox(
                        width: 300,
                        child: _SearchField(
                          searchQuery: _searchQuery,
                          onSearchChanged: (String query) {
                            setState(() => _searchQuery = query);
                          },
                        ),
                      ),
                    ],
                  ),
                  const SizedBox(height: AppSizes.spacing),

                  // Info de resultados
                  if (state.facultativos.length != facultativosFiltrados.length)
                    Padding(
                      padding: const EdgeInsets.only(bottom: AppSizes.spacing),
                      child: Text(
                        'Mostrando ${facultativosFiltrados.length} de ${state.facultativos.length} facultativos',
                        style: GoogleFonts.inter(
                          fontSize: 13,
                          color: AppColors.textSecondaryLight,
                        ),
                      ),
                    ),

                  // Tabla
                  ModernDataTableV2<FacultativoEntity>(
                    onRowTap: (FacultativoEntity facultativo) => _viewFacultativo(context, facultativo),
                    onEdit: (FacultativoEntity facultativo) => _editFacultativo(context, facultativo),
                    onDelete: (FacultativoEntity facultativo) => _confirmDelete(context, facultativo),
                    sortColumnIndex: _sortColumnIndex,
                    sortAscending: _sortAscending,
                    onSort: (int columnIndex, bool ascending) {
                      setState(() {
                        _sortColumnIndex = columnIndex;
                        _sortAscending = ascending;
                      });
                    },
                    columns: const <ModernDataColumnV2>[
                      ModernDataColumnV2(label: 'NOMBRE COMPLETO', flex: 2, sortable: true),
                      ModernDataColumnV2(label: 'N√öM. COLEGIADO', sortable: true),
                      ModernDataColumnV2(label: 'ESPECIALIDAD', flex: 2, sortable: true),
                      ModernDataColumnV2(label: 'TEL√âFONO'),
                      ModernDataColumnV2(label: 'EMAIL', flex: 2),
                      ModernDataColumnV2(label: 'ESTADO', sortable: true, flex: 0),
                    ],
                    rows: facultativosFiltrados.map((FacultativoEntity facultativo) {
                      return ModernDataRowV2<FacultativoEntity>(
                        data: facultativo,
                        cells: <Widget>[
                          _buildNombreCell(facultativo),
                          _buildNumColegiadoCell(facultativo),
                          _buildEspecialidadCell(facultativo),
                          _buildTelefonoCell(facultativo),
                          _buildEmailCell(facultativo),
                          _buildEstadoCell(facultativo),
                        ],
                      );
                    }).toList(),
                    emptyMessage: _searchQuery.isNotEmpty
                        ? 'No se encontraron facultativos con los filtros aplicados'
                        : 'No hay facultativos registrados',
                    emptyIcon: Icons.medical_services_outlined,
                  ),
                ],
              ),
            );
          }

          return const SizedBox.shrink();
        },
      ),
    );
  }

  List<FacultativoEntity> _filterFacultativos(List<FacultativoEntity> facultativos) {
    if (_searchQuery.isEmpty) {
      return facultativos;
    }

    final String query = _searchQuery.toLowerCase();
    return facultativos.where((FacultativoEntity facultativo) {
      return facultativo.nombreCompleto.toLowerCase().contains(query) ||
          (facultativo.numColegiado?.toLowerCase().contains(query) ?? false) ||
          (facultativo.especialidadNombre?.toLowerCase().contains(query) ?? false) ||
          (facultativo.email?.toLowerCase().contains(query) ?? false);
    }).toList();
  }

  List<FacultativoEntity> _sortFacultativos(List<FacultativoEntity> facultativos) {
    if (_sortColumnIndex == null) {
      return facultativos;
    }

    final List<FacultativoEntity> sorted = List<FacultativoEntity>.from(facultativos)
      ..sort((FacultativoEntity a, FacultativoEntity b) {
        int comparison = 0;

        switch (_sortColumnIndex) {
          case 0: // Nombre completo
            comparison = a.nombreCompleto.compareTo(b.nombreCompleto);
          case 1: // N√∫m. Colegiado
            comparison = (a.numColegiado ?? '').compareTo(b.numColegiado ?? '');
          case 2: // Especialidad
            comparison = (a.especialidadNombre ?? '').compareTo(b.especialidadNombre ?? '');
          case 5: // Estado
            comparison = a.activo == b.activo ? 0 : (a.activo ? -1 : 1);
        }

        return _sortAscending ? comparison : -comparison;
      });

    return sorted;
  }

  Widget _buildNombreCell(FacultativoEntity facultativo) {
    return Text(
      facultativo.nombreCompleto,
      style: GoogleFonts.inter(
        fontSize: 13,
        fontWeight: FontWeight.w600,
        color: AppColors.textPrimaryLight,
      ),
    );
  }

  Widget _buildNumColegiadoCell(FacultativoEntity facultativo) {
    return Text(
      facultativo.numColegiado ?? '-',
      style: GoogleFonts.inter(
        fontSize: 13,
        color: facultativo.numColegiado != null
            ? AppColors.textSecondaryLight
            : AppColors.textSecondaryLight.withValues(alpha: 0.5),
        fontStyle: facultativo.numColegiado != null ? FontStyle.normal : FontStyle.italic,
      ),
    );
  }

  Widget _buildEspecialidadCell(FacultativoEntity facultativo) {
    return Text(
      facultativo.especialidadNombre ?? 'Sin especialidad',
      style: GoogleFonts.inter(
        fontSize: 13,
        color: facultativo.especialidadNombre != null
            ? AppColors.textSecondaryLight
            : AppColors.textSecondaryLight.withValues(alpha: 0.5),
        fontStyle: facultativo.especialidadNombre != null ? FontStyle.normal : FontStyle.italic,
      ),
      maxLines: 2,
      overflow: TextOverflow.ellipsis,
    );
  }

  Widget _buildTelefonoCell(FacultativoEntity facultativo) {
    return Text(
      facultativo.telefono ?? '-',
      style: GoogleFonts.inter(
        fontSize: 13,
        color: AppColors.textSecondaryLight,
      ),
    );
  }

  Widget _buildEmailCell(FacultativoEntity facultativo) {
    return Text(
      facultativo.email ?? '-',
      style: GoogleFonts.inter(
        fontSize: 13,
        color: AppColors.textSecondaryLight,
      ),
      maxLines: 1,
      overflow: TextOverflow.ellipsis,
    );
  }

  Widget _buildEstadoCell(FacultativoEntity facultativo) {
    return Center(
      child: Tooltip(
        message: facultativo.activo ? 'Activo' : 'Inactivo',
        child: Icon(
          facultativo.activo ? Icons.check_circle : Icons.cancel,
          size: 24,
          color: facultativo.activo ? AppColors.success : AppColors.textSecondaryLight,
        ),
      ),
    );
  }

  void _viewFacultativo(BuildContext context, FacultativoEntity facultativo) {
    showDialog<void>(
      context: context,
      builder: (BuildContext dialogContext) => BlocProvider<FacultativoBloc>.value(
        value: context.read<FacultativoBloc>(),
        child: _FacultativoViewDialog(facultativo: facultativo),
      ),
    );
  }

  void _editFacultativo(BuildContext context, FacultativoEntity facultativo) {
    showDialog<void>(
      context: context,
      builder: (BuildContext dialogContext) => BlocProvider<FacultativoBloc>.value(
        value: context.read<FacultativoBloc>(),
        child: FacultativoFormDialog(facultativo: facultativo),
      ),
    );
  }

  Future<void> _confirmDelete(BuildContext context, FacultativoEntity facultativo) async {
    final bool? confirmed = await showConfirmationDialog(
      context: context,
      title: 'Confirmar Eliminaci√≥n',
      message: '¬øEst√°s seguro de que deseas eliminar este facultativo? Esta acci√≥n no se puede deshacer.',
      itemDetails: <String, String>{
        'Nombre': facultativo.nombre,
        'Apellidos': facultativo.apellidos,
        if (facultativo.numColegiado != null && facultativo.numColegiado!.isNotEmpty)
          'N¬∫ Colegiado': facultativo.numColegiado!,
        if (facultativo.especialidadNombre != null && facultativo.especialidadNombre!.isNotEmpty)
          'Especialidad': facultativo.especialidadNombre!,
        if (facultativo.telefono != null && facultativo.telefono!.isNotEmpty)
          'Tel√©fono': facultativo.telefono!,
        if (facultativo.email != null && facultativo.email!.isNotEmpty)
          'Email': facultativo.email!,
        'Estado': facultativo.activo ? 'Activo' : 'Inactivo',
      },
    );

    if (confirmed == true && context.mounted) {
      debugPrint('üóëÔ∏è Eliminando facultativo: ${facultativo.nombreCompleto} (${facultativo.id})');

      // Variable para guardar el contexto del di√°logo
      BuildContext? loadingContext;

      // Mostrar overlay de loading
      unawaited(
        showDialog<void>(
          context: context,
          barrierDismissible: false,
          builder: (BuildContext dialogContext) {
            debugPrint('üí¨ showDialog builder: Guardando contexto localmente');
            // Guardar contexto localmente primero
            loadingContext = dialogContext;

            // Programar setState para despu√©s del build
            WidgetsBinding.instance.addPostFrameCallback((_) {
              debugPrint('‚è∞ addPostFrameCallback: Ejecut√°ndose... mounted=$mounted, loadingContext=${loadingContext != null ? "‚úÖ" : "‚ùå"}');
              if (mounted && loadingContext != null) {
                debugPrint('‚úÖ addPostFrameCallback: Guardando contexto en estado');
                setState(() {
                  _isDeleting = true;
                  _loadingDialogContext = loadingContext;
                  _deleteStartTime = DateTime.now();
                });
                debugPrint('‚úÖ addPostFrameCallback: Contexto guardado');
              } else {
                debugPrint('‚ùå addPostFrameCallback: NO se puede guardar contexto (mounted=$mounted, loadingContext=${loadingContext != null})');
              }
            });

            return const AppLoadingOverlay(
              message: 'Eliminando facultativo...',
              color: AppColors.emergency,
              icon: Icons.delete_forever,
            );
          },
        ),
      );

      // Disparar evento de eliminaci√≥n
      if (context.mounted) {
        context.read<FacultativoBloc>().add(FacultativoDeleteRequested(facultativo.id));
      }

      // El BlocListener cerrar√° el di√°logo cuando se complete
    }
  }
}

