/// Tabla de centros hospitalarios moderna
class CentroHospitalarioTable extends StatefulWidget {
  const CentroHospitalarioTable({super.key});

  @override
  State<CentroHospitalarioTable> createState() => _CentroHospitalarioTableState();
}

class _CentroHospitalarioTableState extends State<CentroHospitalarioTable> {
  String _searchQuery = '';
  int? _sortColumnIndex;
  bool _sortAscending = true;
  bool _isDeleting = false;
  BuildContext? _loadingDialogContext;
  DateTime? _deleteStartTime;

  @override
  Widget build(BuildContext context) {
    return BlocListener<CentroHospitalarioBloc, CentroHospitalarioState>(
      listener: (BuildContext context, CentroHospitalarioState state) {
        // Solo procesar si estamos eliminando
        if (_isDeleting && _loadingDialogContext != null) {
          if (state is CentroHospitalarioLoaded || state is CentroHospitalarioError) {
            // Calcular tiempo transcurrido
            final Duration elapsed = DateTime.now().difference(_deleteStartTime!);

            // Cerrar el di√°logo de loading usando el contexto guardado
            Navigator.of(_loadingDialogContext!).pop();

            // Resetear variables
            setState(() {
              _isDeleting = false;
              _loadingDialogContext = null;
              _deleteStartTime = null;
            });

            // Si es error, mostrar snackbar
            if (state is CentroHospitalarioError) {
              ScaffoldMessenger.of(context).showSnackBar(
                SnackBar(
                  content: Text('Error al eliminar: ${state.message}'),
                  backgroundColor: AppColors.error,
                ),
              );
            } else if (state is CentroHospitalarioLoaded) {
              // Mostrar mensaje de √©xito con tiempo
              ScaffoldMessenger.of(context).showSnackBar(
                SnackBar(
                  content: Text('‚úÖ Centro hospitalario eliminado exitosamente (${elapsed.inMilliseconds}ms)'),
                  backgroundColor: AppColors.success,
                  duration: const Duration(seconds: 3),
                ),
              );
            }
          }
        }
      },
      child: BlocBuilder<CentroHospitalarioBloc, CentroHospitalarioState>(
      builder: (BuildContext context, CentroHospitalarioState state) {
        if (state is CentroHospitalarioLoading) {
          return const _LoadingView();
        }

        if (state is CentroHospitalarioError) {
          return _ErrorView(message: state.message);
        }

        if (state is CentroHospitalarioLoaded) {
          List<CentroHospitalarioEntity> centrosFiltrados = _filterCentros(state.centros);
          centrosFiltrados = _sortCentros(centrosFiltrados);

          return SingleChildScrollView(
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.stretch,
              children: <Widget>[
                // Header: T√≠tulo + B√∫squeda
                Row(
                  children: <Widget>[
                    Expanded(
                      child: Text(
                        'Listado de Centros Hospitalarios',
                        style: GoogleFonts.inter(
                          fontSize: 18,
                          fontWeight: FontWeight.w600,
                          color: AppColors.textPrimaryLight,
                        ),
                      ),
                    ),
                    SizedBox(
                      width: 300,
                      child: _SearchField(
                        searchQuery: _searchQuery,
                        onSearchChanged: (String query) {
                          setState(() => _searchQuery = query);
                        },
                      ),
                    ),
                  ],
                ),
                const SizedBox(height: AppSizes.spacing),

                // Info de resultados
                if (state.centros.length != centrosFiltrados.length)
                  Padding(
                    padding: const EdgeInsets.only(bottom: AppSizes.spacing),
                    child: Text(
                      'Mostrando ${centrosFiltrados.length} de ${state.centros.length} centros',
                      style: GoogleFonts.inter(
                        fontSize: 13,
                        color: AppColors.textSecondaryLight,
                      ),
                    ),
                  ),

                // Tabla
                ModernDataTableV2<CentroHospitalarioEntity>(
                  onRowTap: (CentroHospitalarioEntity centro) => _viewCentro(context, centro),
                  onEdit: (CentroHospitalarioEntity centro) => _editCentro(context, centro),
                  onDelete: (CentroHospitalarioEntity centro) => _confirmDelete(context, centro),
                  sortColumnIndex: _sortColumnIndex,
                  sortAscending: _sortAscending,
                  onSort: (int columnIndex, bool ascending) {
                    setState(() {
                      _sortColumnIndex = columnIndex;
                      _sortAscending = ascending;
                    });
                  },
                  columns: const <ModernDataColumnV2>[
                    ModernDataColumnV2(label: 'NOMBRE', flex: 3, sortable: true),
                    ModernDataColumnV2(label: 'TIPO', flex: 2, sortable: true),
                    ModernDataColumnV2(label: 'LOCALIDAD', flex: 3, sortable: true),
                    ModernDataColumnV2(label: 'TEL√âFONO', flex: 2, sortable: true),
                    ModernDataColumnV2(label: 'ESTADO', sortable: true, flex: 0),
                  ],
                  rows: centrosFiltrados.map((CentroHospitalarioEntity centro) {
                    return ModernDataRowV2<CentroHospitalarioEntity>(
                      data: centro,
                      cells: <Widget>[
                        _buildNombreCell(centro),
                        _buildTipoCell(centro),
                        _buildLocalidadCell(centro),
                        _buildTelefonoCell(centro),
                        _buildEstadoCell(centro),
                      ],
                    );
                  }).toList(),
                  emptyMessage: _searchQuery.isNotEmpty
                      ? 'No se encontraron centros con los filtros aplicados'
                      : 'No hay centros hospitalarios registrados',
                ),
              ],
            ),
          );
        }

        return const SizedBox.shrink();
      },
      ),
    );
  }

  List<CentroHospitalarioEntity> _filterCentros(List<CentroHospitalarioEntity> centros) {
    if (_searchQuery.isEmpty) {
      return centros;
    }

    final String query = _searchQuery.toLowerCase();
    return centros.where((CentroHospitalarioEntity centro) {
      return centro.nombre.toLowerCase().contains(query) ||
          (centro.localidadNombre?.toLowerCase().contains(query) ?? false) ||
          (centro.provinciaNombre?.toLowerCase().contains(query) ?? false) ||
          (centro.tipoCentro?.toLowerCase().contains(query) ?? false);
    }).toList();
  }

  List<CentroHospitalarioEntity> _sortCentros(List<CentroHospitalarioEntity> centros) {
    if (_sortColumnIndex == null) {
      return centros;
    }

    final List<CentroHospitalarioEntity> sorted = List<CentroHospitalarioEntity>.from(centros);

    // ignore: cascade_invocations
    sorted.sort((CentroHospitalarioEntity a, CentroHospitalarioEntity b) {
      int comparison = 0;

      switch (_sortColumnIndex) {
        case 0: // Nombre
          comparison = a.nombre.compareTo(b.nombre);
        case 1: // Tipo
          comparison = (a.tipoCentro ?? '').compareTo(b.tipoCentro ?? '');
        case 2: // Localidad
          comparison = (a.localidadNombre ?? '').compareTo(b.localidadNombre ?? '');
        case 3: // Tel√©fono
          comparison = (a.telefono ?? '').compareTo(b.telefono ?? '');
        case 4: // Estado
          comparison = a.activo == b.activo ? 0 : (a.activo ? -1 : 1);
      }

      return _sortAscending ? comparison : -comparison;
    });

    return sorted;
  }

  Widget _buildNombreCell(CentroHospitalarioEntity centro) {
    return Text(
      centro.nombre,
      style: GoogleFonts.inter(
        fontSize: 13,
        fontWeight: FontWeight.w600,
        color: AppColors.textPrimaryLight,
      ),
    );
  }

  Widget _buildTipoCell(CentroHospitalarioEntity centro) {
    return Container(
      padding: const EdgeInsets.symmetric(
        horizontal: AppSizes.paddingSmall,
        vertical: 4,
      ),
      decoration: BoxDecoration(
        color: _getTipoColor(centro.tipoCentro).withValues(alpha: 0.1),
        borderRadius: BorderRadius.circular(AppSizes.radiusSmall),
      ),
      child: Text(
        centro.tipoCentro ?? 'N/A',
        style: GoogleFonts.inter(
          fontSize: 12,
          fontWeight: FontWeight.w600,
          color: _getTipoColor(centro.tipoCentro),
        ),
      ),
    );
  }

  Widget _buildLocalidadCell(CentroHospitalarioEntity centro) {
    return Text(
      centro.localidadNombre != null
          ? '${centro.localidadNombre} (${centro.provinciaNombre ?? ''})'
          : 'N/A',
      style: GoogleFonts.inter(
        fontSize: 13,
        color: AppColors.textSecondaryLight,
      ),
    );
  }

  Widget _buildTelefonoCell(CentroHospitalarioEntity centro) {
    return Text(
      centro.telefono ?? 'N/A',
      style: GoogleFonts.inter(
        fontSize: 13,
        color: AppColors.textPrimaryLight,
      ),
    );
  }

  Widget _buildEstadoCell(CentroHospitalarioEntity centro) {
    return Center(
      child: Tooltip(
        message: centro.activo ? 'Activo' : 'Inactivo',
        child: Icon(
          centro.activo ? Icons.check_circle : Icons.cancel,
          size: 24,
          color: centro.activo ? AppColors.success : AppColors.textSecondaryLight,
        ),
      ),
    );
  }

  Color _getTipoColor(String? tipo) {
    switch (tipo?.toLowerCase()) {
      case 'hospital':
        return AppColors.primary;
      case 'centro salud':
        return AppColors.secondary;
      case 'cl√≠nica':
      case 'clinica':
        return AppColors.info;
      default:
        return AppColors.textSecondaryLight;
    }
  }

  void _viewCentro(BuildContext context, CentroHospitalarioEntity centro) {
    showDialog<void>(
      context: context,
      builder: (BuildContext dialogContext) => BlocProvider<CentroHospitalarioBloc>.value(
        value: context.read<CentroHospitalarioBloc>(),
        child: _CentroHospitalarioViewDialog(centro: centro),
      ),
    );
  }

  void _editCentro(BuildContext context, CentroHospitalarioEntity centro) {
    showDialog<void>(
      context: context,
      builder: (BuildContext dialogContext) => BlocProvider<CentroHospitalarioBloc>.value(
        value: context.read<CentroHospitalarioBloc>(),
        child: CentroHospitalarioFormDialog(centro: centro),
      ),
    );
  }

  Future<void> _confirmDelete(BuildContext context, CentroHospitalarioEntity centro) async {
    final bool? confirmed = await showConfirmationDialog(
      context: context,
      title: 'Confirmar Eliminaci√≥n',
      message: '¬øEst√°s seguro de que deseas eliminar este centro hospitalario? Esta acci√≥n no se puede deshacer.',
      itemDetails: <String, String>{
        'Nombre': centro.nombre,
        if (centro.tipoCentro != null && centro.tipoCentro!.isNotEmpty)
          'Tipo': centro.tipoCentro!,
        if (centro.direccion != null && centro.direccion!.isNotEmpty)
          'Direcci√≥n': centro.direccion!,
        if (centro.localidadNombre != null && centro.localidadNombre!.isNotEmpty)
          'Localidad': centro.localidadNombre!,
        if (centro.provinciaNombre != null && centro.provinciaNombre!.isNotEmpty)
          'Provincia': centro.provinciaNombre!,
        if (centro.telefono != null && centro.telefono!.isNotEmpty)
          'Tel√©fono': centro.telefono!,
        if (centro.email != null && centro.email!.isNotEmpty)
          'Email': centro.email!,
        'Estado': centro.activo ? 'Activo' : 'Inactivo',
      },
    );

    if (confirmed == true && context.mounted) {
      debugPrint('üóëÔ∏è Eliminando centro: ${centro.nombre} (${centro.id})');

      // Variable para guardar el contexto del di√°logo
      BuildContext? loadingContext;

      // Mostrar overlay de loading
      unawaited(
        showDialog<void>(
          context: context,
          barrierDismissible: false,
          builder: (BuildContext dialogContext) {
            debugPrint('üí¨ showDialog builder: Guardando contexto localmente');
            loadingContext = dialogContext;

            WidgetsBinding.instance.addPostFrameCallback((_) {
              debugPrint('‚è∞ addPostFrameCallback: Ejecut√°ndose... mounted=$mounted, loadingContext=${loadingContext != null ? "‚úÖ" : "‚ùå"}');
              if (mounted && loadingContext != null) {
                debugPrint('‚úÖ addPostFrameCallback: Guardando contexto en estado');
                setState(() {
                  _isDeleting = true;
                  _loadingDialogContext = loadingContext;
                  _deleteStartTime = DateTime.now();
                });
                debugPrint('‚úÖ addPostFrameCallback: Contexto guardado');
              } else {
                debugPrint('‚ùå addPostFrameCallback: NO se puede guardar contexto (mounted=$mounted, loadingContext=${loadingContext != null})');
              }
            });

            return const AppLoadingOverlay(
              message: 'Eliminando centro hospitalario...',
              color: AppColors.emergency,
              icon: Icons.delete_forever,
            );
          },
        ),
      );

      // Disparar evento de eliminaci√≥n
      if (context.mounted) {
        context.read<CentroHospitalarioBloc>().add(CentroHospitalarioDeleteRequested(centro.id));
      }

      // El BlocListener cerrar√° el di√°logo cuando se complete
    }
  }
}

